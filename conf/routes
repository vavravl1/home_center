# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

# Versioned Assets
GET         /assets/*file                           controllers.Assets.versioned(path="/public", file: Asset)

# Main page - react router
GET         /                                       controllers.HomeController.indexReact
GET         /data                                   controllers.HomeController.indexReact
GET         /signIn                                 controllers.HomeController.indexReact
GET         /settings                               controllers.HomeController.indexReact

# Sign in/out
POST        /signIn                          controllers.SignInController.submit
GET         /signOut                          controllers.SignInController.signOut

# Ibisek watering
GET         /watering/ibisek                        controllers.WateringController.getAllStates(timeGranularity:String ?= "ByHour")
POST        /watering/ibisek/manual-watering        controllers.WateringController.manualWatering


GET         /bc/:location/:position/:sensor                             controllers.BigClownController.getSensorReading(location, position, sensor, timeGranularity:String ?= "ByHour")